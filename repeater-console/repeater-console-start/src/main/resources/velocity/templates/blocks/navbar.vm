<!-- Navbar -->
<nav class="main-header navbar navbar-expand navbar-dark">
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
        </li>
    </ul>

    <!-- Right navbar links -->
    <ul class="navbar-nav ml-auto">
        <!-- 语言切换器 -->
        <li class="nav-item dropdown">
            <a class="nav-link" data-toggle="dropdown" href="#">
                <i class="fas fa-language"></i>
                <span id="current-language">中文</span>
            </a>
            <div class="dropdown-menu dropdown-menu-right">
                <a href="#" class="dropdown-item" onclick="i18n.switchLocale('zh_CN'); return false;">
                    <img src="data:image/svg+xml;base64," alt="中文" width="20" height="15" style="margin-right: 5px;">
                    中文
                </a>
                <a href="#" class="dropdown-item" onclick="i18n.switchLocale('en_US'); return false;">
                    <img src="data:image/svg+xml;base64," alt="English" width="20" height="15" style="margin-right: 5px;">
                    English
                </a>
            </div>
        </li>
    </ul>
</nav>
