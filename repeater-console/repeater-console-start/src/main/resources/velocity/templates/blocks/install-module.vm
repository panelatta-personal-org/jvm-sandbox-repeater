<div class="modal fade" id="start-install-modal" data-easein="shrinkIn" role="dialog" aria-hidden="true">
    <div class="modal-dialog" style="width: 600px">
    <div class="modal-content bg-primary">
        <div class="modal-header">
            <h4 class="modal-title">$i18n.get("modal.install.title")</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                    aria-hidden="true">×</span></button>
        </div>
        <div class="modal-body">
            <div class="alert alert-info">
                <h6><i class="icon fas fa-info"></i> $i18n.get("modal.install.usage.title")</h6>
                $i18n.get("modal.install.usage.content")
            </div>
            <div class="row">
                <div class="col-12 col-12">
                    <form class="form-inline" id="startInstallForm" method="post">
                        <div class="form-group" id="machine-select-group" style="margin-bottom: 15px; width: 100%;">
                            <label for="appName" class="col-3 control-label">$i18n.get("form.appname.label")</label>
                            <div class="col-8">
                                <input type="text" class="form-control form-control-sm" name="appName" autocomplete="off" placeholder="$i18n.get('form.appname.placeholder')" style="width: 300px" required>
                            </div>
                        </div>
                        <div class="form-group" id="machine-select-group" style="margin-bottom: 15px; width: 100%;">
                            <label for="ip" class="col-3 control-label">$i18n.get("form.ip.label")</label>
                            <div class="col-8">
                                <input type="text" class="form-control form-control-sm" name="ip" autocomplete="off" placeholder="$i18n.get('form.ip.placeholder')" style="width: 300px" required>
                            </div>
                        </div>
                        <div class="form-group" id="machine-select-group" style="margin-bottom: 15px; width: 100%;">
                            <label for="port" class="col-3 control-label">$i18n.get("form.port.label")</label>
                            <div class="col-8">
                                <input type="number" class="form-control form-control-sm" name="port" autocomplete="off" placeholder="$i18n.get('form.port.placeholder')" value="12580" min="1" max="65535" style="width: 300px">
                                <small class="form-text text-muted">$i18n.get("form.port.help")</small>
                            </div>
                        </div>
                        <div class="form-group" id="machine-select-group" style="width: 100%;">
                            <label for="environment" class="col-3 control-label">$i18n.get("form.environment.label")</label>
                            <div class="col-8">
                                <select class="form-control form-control-sm" name="environment" style="width: 300px">
                                    <option value="default">$i18n.get("environment.default")</option>
                                    <option value="dev">$i18n.get("environment.dev")</option>
                                    <option value="test">$i18n.get("environment.test")</option>
                                    <option value="staging">$i18n.get("environment.staging")</option>
                                    <option value="prod">$i18n.get("environment.prod")</option>
                                </select>
                                <small class="form-text text-muted">$i18n.get("form.environment.help")</small>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="modal-footer justify-content-between">
            <button type="button" class="btn btn-outline-light pull-left" data-dismiss="modal">$i18n.get("button.cancel")</button>
            <button type="button" class="btn btn-outline-light" id="start-install-btn">$i18n.get("button.register")</button>
        </div>
        
        <!-- Loading遮罩层 -->
        <div class="modal-loading-overlay" id="modal-loading" style="display: none;">
            <div class="loading-content">
                <i class="fa fa-spinner fa-spin fa-3x"></i>
                <h4 id="loading-message">$i18n.get("loading.connecting")</h4>
                <div class="progress-container">
                    <div class="progress-step" id="progress-step">$i18n.get("step.validating.form")</div>
                    <div class="progress-bar-custom">
                        <div class="progress-bar-fill" id="progress-bar" style="width: 0%"></div>
                    </div>
                </div>
                <p id="loading-detail">$i18n.get("loading.please.wait")</p>
                <button type="button" class="btn btn-outline-light btn-sm" id="cancel-request">
                    <i class="fa fa-times"></i> $i18n.get("button.cancel.request")
                </button>
            </div>
        </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>