<!DOCTYPE html>
<html>
<head>
    #set($pageTitle = $i18n.get("title.online.traffic"))
    #parse("blocks/html-head.vm")
</head>
<body class="hold-transition sidebar-mini">
<!-- Site wrapper -->
<div class="wrapper">
    #parse("blocks/navbar.vm")

    #set($currentPage = "online")
    #parse("blocks/sidebar.vm")

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>$i18n.get("title.online.traffic")</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">$i18n.get("page.home")</a></li>
                            <li class="breadcrumb-item active">$i18n.get("title.online.traffic")</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-12">
                    <div class="card card-blue card-outline">
                        <div class="card-header border-0">
                            <h5 class="card-title text-blue">
                                $i18n.get("page.call.list") <i class="fa fa-database"></i>
                            </h5>
                            <div class="card-tools">
                                <button type="button" class="btn btn-success btn-sm float-right"
                                        data-loading-text="searching" id="batch-batch-replay">
                                    $i18n.get("button.batch.replay")
                                </button>
                            </div>
                        </div>
                        <div class="card-body" style="margin-top: -20px">
                            <div class="row">
                                <div class="col-lg-12">
                                    <form class="form-inline" method="get" action="search.htm">
                                        <div class="form-group" style="margin-left:10px">
                                            <label for="appName">$i18n.get("label.app.name"):</label>
                                            <input type="text" class="form-control" placeholder="$i18n.get('label.app.name')" 
                                                   name="appName" value="$!requestParams.appName" autocomplete="off"
                                                   data-toggle="tooltip" title="$i18n.get('label.app.name')" 
                                                   style="width: 210px;margin-left:10px">
                                        </div>
                                        <div class="form-group" style="margin-left: 10px">
                                            <label for="TraceId">$i18n.get("label.trace.id"):</label>
                                            <input type="text" class="form-control" placeholder="$i18n.get('label.trace.id')" 
                                                   name="traceId" value="$!requestParams.traceId" autocomplete="off"
                                                   data-toggle="tooltip" title="$i18n.get('label.trace.id')" 
                                                   style="width: 210px;margin-left:10px">
                                        </div>
                                        <div class="form-group" style="margin-left: 20px">
                                            <button type="submit" class="btn btn-primary"
                                                    data-loading-text="searching" id="search-online-btn">
                                                $i18n.get("button.query") <i class="fa fa-search icon-on-right bigger"></i>
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <table class="table table-hover table-striped" style="word-break: break-all;">
                                #if($pagerWrapper.content && $pagerWrapper.content.size() > 0)
                                    <thead>
                                    <tr>
                                        <th><input data-toggle="tooltip" title="$i18n.get('table.select.all')" 
                                                   type="checkbox" id="check-all" name="check-all" value=""/></th>
                                        <th>$i18n.get("table.app.name")</th>
                                        <th>$i18n.get("table.entrance")</th>
                                        <th>$i18n.get("table.trace.id")</th>
                                        <th>$i18n.get("table.environment")</th>
                                        <th>$i18n.get("table.machine")</th>
                                        <th>$i18n.get("table.time")</th>
                                        <th width="100px">$i18n.get("table.operation")</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                        #foreach($data in $pagerWrapper.content)
                                        <tr>
                                            <td style="vertical-align: middle">
                                                <input data-toggle="icheck" type="checkbox" name="choose-case"
                                                       value="$!{data.traceId}"/>
                                            </td>
                                            <td style="vertical-align: middle">$!data.appName</td>
                                            <td style="vertical-align: middle">$!data.entranceDesc</td>
                                            <td style="vertical-align: middle">$!{data.traceId}</td>
                                            <td style="vertical-align: middle">$!{data.environment}</td>
                                            <td style="vertical-align: middle">$!{data.host}</td>
                                            <td style="vertical-align: middle">$!{data.gmtRecord}</td>
                                            <td style="vertical-align: middle">
                                                <a target="_blank"
                                                   href="detail.htm?appName=$!{data.appName}&traceId=$!{data.traceId}"
                                                   class="btn btn-primary btn-xs" data-toggle="tooltip"
                                                   title="$i18n.get('button.detail')">$i18n.get("button.detail")</a>
                                                <button class="btn btn-success btn-xs btn-replay" data-toggle="tooltip"
                                                        title="$i18n.get('button.replay')" data-id="$!{data.traceId}"
                                                        data-app="$!{data.appName}">$i18n.get("button.replay")
                                                </button>
                                            </td>
                                        </tr>
                                        #end
                                    </tbody>
                                #else
                                    <h5 style="padding-left: 10px;padding-top: 20px">$i18n.get("msg.no.data.recorded")</h5>
                                #end
                            </table>
                        </div>
                        <div class="card-footer clearfix">
                            #parse("blocks/pager.vm")
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

    #parse("blocks/footer.vm")
</div>
<!-- ./wrapper -->

#parse("blocks/header-scripts.vm")
<script src="/app/js/start-repaly.js" charset="UTF-8"></script>
#parse("blocks/fakeloader.vm")

<script type="application/javascript">
    jQuery(function ($) {
        $("#check-all").click(function () {
            if ($(this).prop("checked")) {
                $('input[name="choose-case"]:checkbox').each(function () {
                    $(this).prop("checked", true);
                })
            } else {
                $('input[name="choose-case"]:checkbox').each(function () {
                    $(this).prop("checked", false);
                })
            }
        });
    });
</script>
#parse("blocks/start-replay.vm")
</body>
</html>