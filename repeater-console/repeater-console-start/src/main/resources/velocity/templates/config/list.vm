        // ==================== æ–¹æ¡ˆ1ï¼šConfigæ¨é€è°ƒè¯•é¢æ¿å‡½æ•° ====================
        
        window.toggleConfigDebugPanel = function() {
            var $panel = $('#config-debug-panel');
            if ($panel.is(':visible')) {
                $panel.hide();
