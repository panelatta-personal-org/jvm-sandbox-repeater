            $('#push-params-display').html('<p class="text-muted">ç‚¹å‡»æ¨é€æŒ‰é’®æ—¶æ˜¾ç¤ºå‚æ•°</p>');
            $('#module-match-display').html('<p class="text-muted">æ˜¾ç¤ºåŒ¹é…çš„æ¨¡å—åˆ—è¡¨</p>');
        };
        
    })
</script>

