        window.runConsistencyTest = function() {
            var appName = jq('#k8s-test-app').val().trim();
            var environment = jq('#k8s-test-env').val().trim();
            
            if (!appName || !environment) {
                jq('#k8s-consistency-result').html('<p class="text-warning">请填写应用名和环境</p>');
                return;
            }
            
            jq('#k8s-consistency-result').html('<i class="fa fa-spinner fa-spin"></i> 正在进行一致性测试...');
            
            var testResults = [];
            var testCount = 5; // 进行5次测试
            var currentTest = 0;
            
            function runSingleTest() {
                currentTest++;
                jq.ajax({
                    url: '/config/debugMatching.json',
                    method: 'GET',
                    data: { appName: appName, environment: environment },
                    success: function(response) {
                        testResults.push({
                            test: currentTest,
                            timestamp: new Date().toISOString(),
                            success: response.success,
                            moduleCount: response.success && response.data ? response.data.moduleCount : 0,
                            configCount: response.success && response.data ? response.data.configCount : 0,
                            response: response
                        });
                        
                        if (currentTest < testCount) {
                            // 等待1秒后进行下一次测试
                            setTimeout(runSingleTest, 1000);
                        } else {
                            // 所有测试完成，分析结果
                            analyzeConsistencyResults(testResults);
                        }
                    },
                    error: function() {
                        testResults.push({
                            test: currentTest,
                            timestamp: new Date().toISOString(),
                            success: false,
                            error: 'API调用失败'
                        });
                        
                        if (currentTest < testCount) {
                            setTimeout(runSingleTest, 1000);
                        } else {
                            analyzeConsistencyResults(testResults);
                        }
                    }
                });
            }
            
            runSingleTest();
        };
        
        function analyzeConsistencyResults(results) {
            var html = '<div class="alert alert-info">';
            html += '<h6><i class="fa fa-chart-line"></i> 数据一致性测试结果</h6>';
            
            var successCount = results.filter(function(r) { return r.success; }).length;
            var moduleCountSet = new Set();
            var configCountSet = new Set();
            
            results.forEach(function(result) {
                if (result.success) {
                    moduleCountSet.add(result.moduleCount);
                    configCountSet.add(result.configCount);
                }
            });
            
            html += '<p><strong>成功率:</strong> ' + successCount + '/' + results.length + ' (' + ((successCount/results.length)*100).toFixed(1) + '%)</p>';
            html += '<p><strong>Module数量变化:</strong> ' + Array.from(moduleCountSet).join(', ') + (moduleCountSet.size > 1 ? ' <span class="text-danger">[不一致!]</span>' : ' <span class="text-success">[一致]</span>') + '</p>';
            html += '<p><strong>Config数量变化:</strong> ' + Array.from(configCountSet).join(', ') + (configCountSet.size > 1 ? ' <span class="text-danger">[不一致!]</span>' : ' <span class="text-success">[一致]</span>') + '</p>';
            
            html += '</div>';
            
            html += '<h6>详细测试记录:</h6>';
            html += '<table class="table table-sm table-striped">';
            html += '<thead><tr><th>测试</th><th>时间</th><th>成功</th><th>Module</th><th>Config</th></tr></thead>';
            html += '<tbody>';
            
            results.forEach(function(result) {
                html += '<tr>';
                html += '<td>' + result.test + '</td>';
                html += '<td>' + result.timestamp.substring(11, 19) + '</td>';
                html += '<td>' + (result.success ? '<span class="text-success">是</span>' : '<span class="text-danger">否</span>') + '</td>';
                html += '<td>' + (result.moduleCount || 'N/A') + '</td>';
                html += '<td>' + (result.configCount || 'N/A') + '</td>';
                html += '</tr>';
            });
            
            html += '</tbody></table>';
            
            // 分析和建议
            if (moduleCountSet.size > 1 || configCountSet.size > 1) {
                html += '<div class="alert alert-danger">';
                html += '<h6>❌ 发现数据不一致问题！</h6>';
                html += '<p><strong>可能原因:</strong></p>';
                html += '<ul>';
                html += '<li>不同Pod连接到不同的数据库实例</li>';
                html += '<li>数据库读写分离导致的延迟</li>';
                html += '<li>负载均衡器将请求分发到不同的服务实例</li>';
                html += '<li>缓存不一致</li>';
                html += '</ul>';
                html += '</div>';
            } else if (successCount === results.length && moduleCountSet.size === 1 && configCountSet.size === 1) {
                html += '<div class="alert alert-success">';
                html += '<h6>✅ 数据一致性正常</h6>';
                html += '<p>所有测试结果一致，问题可能出现在其他方面。</p>';
                html += '</div>';
            }
            
            jq('#k8s-consistency-result').html(html);
        }
        
        window.runTimestampAnalysis = function() {
