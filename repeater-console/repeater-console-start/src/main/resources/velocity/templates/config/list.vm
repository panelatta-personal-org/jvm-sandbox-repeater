<script type="application/javascript">
    // ÈÅøÂÖç‰∏éVelocityÁöÑ$Á¨¶Âè∑ÂÜ≤Á™Å
    var jq = jQuery.noConflict();
    
    // ==================== ÂÖ®Â±ÄÂáΩÊï∞ÂÆö‰πâ (‰æõHTML onclickË∞ÉÁî®) ====================
    
    window.toggleConfigDebugPanel = function() {
            var panel = jq('#config-debug-panel');
            if (panel.is(':visible')) {
                panel.hide();
            } else {
                panel.show();
                if (panel.hasClass('collapsed-card')) {
                    panel.find('[data-card-widget="collapse"]').click();
                }
            }
        };
        
        function showConfigDebugPanel() {
            jq('#config-debug-panel').show();
            if (jq('#config-debug-panel').hasClass('collapsed-card')) {
                jq('#config-debug-panel').find('[data-card-widget="collapse"]').click();
            }
        }
        
        function logPushParams(appName, environment) {
            var params = {
                appName: appName,
                environment: environment,
                timestamp: new Date().toLocaleString()
            };
            
            var html = '<div class="param-item">' +
                '<strong>' + i18n.get('common.app.name') + ':</strong> <span class="text-primary">' + appName + '</span><br>' +
                '<strong>' + i18n.get('common.environment') + ':</strong> <span class="text-info">' + environment + '</span><br>' +
                '<strong>' + i18n.get('common.time') + ':</strong> <span class="text-muted">' + params.timestamp + '</span>' +
                '</div>';
            
            jq('#push-params-display').html(html);
            addDebugLog('[PUSH]', i18n.get('push.start') + ' - AppName: ' + appName + ', Environment: ' + environment);
        }
        
        function checkModuleMatches(appName, environment, callback) {
            addDebugLog('[QUERY]', i18n.get('push.querying.modules'));
            
            jq.ajax({
                url: '/config/checkMatches.json',
                method: 'GET',
                data: { appName: appName, environment: environment },
                success: function(response) {
                    if (response.success) {
                        callback(response.data);
                    } else {
                        callback({
                            hasMatches: false,
                            reason: 'api_error',
                            suggestions: [response.message],
                            matchCount: 0,
                            availableEnvironments: []
                        });
                    }
                },
                error: function() {
                    callback({
                        hasMatches: false,
                        reason: 'network_error',
                        suggestions: [i18n.get('suggestion.check.network'), i18n.get('suggestion.retry')],
                        matchCount: 0,
                        availableEnvironments: []
                    });
                }
            });
        }
        
        function logModuleMatches(matchResult) {
            var html = '';
            if (matchResult.hasMatches) {
                html = '<div class="alert alert-success">' +
                    '<strong>[OK] ' + i18n.get('push.found.modules', matchResult.matchCount) + '</strong>' +
                    '</div>' +
                    '<div class="mt-2">' +
                    '<small class="text-muted">' + i18n.get('push.modules.will.receive') + '</small>' +
                    '</div>';
                addDebugLog('[OK]', i18n.get('push.found.modules', matchResult.matchCount));
            } else {
                var envBadges = '';
                for (var i = 0; i < matchResult.availableEnvironments.length; i++) {
                    envBadges += '<span class="badge badge-secondary mr-1">' + matchResult.availableEnvironments[i] + '</span>';
                }
                
                html = '<div class="alert alert-danger">' +
                    '<strong>[ERROR] ' + i18n.get('push.no.modules') + '</strong>' +
                    '</div>' +
                    '<div class="mt-2">' +
                    '<strong>' + i18n.get('push.reason') + ':</strong> <span class="text-danger">' + getReasonText(matchResult.reason) + '</span><br>' +
                    '<strong>' + i18n.get('env.checker.available.envs') + ':</strong><br>' +
                    envBadges +
                    '</div>';
                addDebugLog('[ERROR]', i18n.get('push.no.modules') + ' - ' + getReasonText(matchResult.reason));
            }
            
            jq('#module-match-display').html(html);
        }
        
        function getReasonText(reason) {
            switch(reason) {
                case 'no_modules': return i18n.get('reason.no.modules');
                case 'environment_mismatch': return i18n.get('reason.env.mismatch');
                case 'api_error': return i18n.get('reason.api.error');
                case 'network_error': return i18n.get('reason.network.error');
                default: return i18n.get('reason.unknown');
            }
        }
        
        function executePushConfig(appName, environment) {
            addDebugLog('[START]', i18n.get('push.start') + '...');
            showLoading(10);
            
            jq.ajax({
                type: 'POST',
                url: "//" + host + "/config/push.json",
                data: {
                    "appName": appName,
                    "environment": environment,
                },
                success: function (res) {
                    hideLoading(10);
                    if (res.success) {
                        addDebugLog('[SUCCESS]', i18n.get('push.success') + ': ' + res.message);
                    } else {
                        addDebugLog('[FAIL]', i18n.get('push.failed') + ': ' + res.message);
                    }
                    notice(res.message, res.success);
                },
                dataType: 'json',
                error: function (XMLHttpRequest) {
                    hideLoading(10);
                    addDebugLog('[EXCEPTION]', i18n.get('push.exception') + ': ' + XMLHttpRequest.responseText);
                    notice(JSON.stringify(XMLHttpRequest), false);
                }
            });
        }
        
        function showNoMatchReason(reason, suggestions) {
            var suggestionHtml = '';
            for (var i = 0; i < suggestions.length; i++) {
                suggestionHtml += '<li>' + suggestions[i] + '</li>';
            }
            
            var alertHtml = '<div class="alert alert-warning">' +
                '<h5><i class="fa fa-exclamation-triangle"></i> ' + i18n.get('push.cannot') + '</h5>' +
                '<p><strong>' + i18n.get('push.reason') + ':</strong> ' + getReasonText(reason) + '</p>' +
                '<p><strong>' + i18n.get('push.suggestion') + ':</strong></p>' +
                '<ul>' + suggestionHtml + '</ul>' +
                '</div>';
            
            jq("#danger-message-area").html(alertHtml);
            jq("#danger-modal").modal('show');
        }
        
        function addDebugLog(icon, message) {
            var timestamp = new Date().toLocaleTimeString();
            var logEntry = '<div class="debug-log-entry">' +
                '<span class="text-muted">[' + timestamp + ']</span> ' +
                '<span>' + icon + '</span> ' +
                '<span>' + message + '</span>' +
                '</div>';
            
            var jqlogDisplay = jq('#debug-log-display');
            jqlogDisplay.append(logEntry);
            jqlogDisplay.scrollTop(jqlogDisplay[0].scrollHeight);
        }
        
        window.clearDebugLog = function() {
            jq('#debug-log-display').empty();
            jq('#push-params-display').html('<p class=\"text-muted\">' + i18n.get('debug.panel.push.params.hint') + '</p>');
            jq('#module-match-display').html('<p class=\"text-muted\">' + i18n.get('debug.panel.module.match.hint') + '</p>');
        };
        
        // ==================== ÊñπÊ°à2ÔºöEnvironment‰∏ÄËá¥ÊÄßÊ£ÄÊü•Âô®ÂáΩÊï∞ ====================
        
        window.openEnvironmentChecker = function() {
            if (!jq('#environment-checker-modal').length) {
                createEnvironmentCheckerModal();
            }
            jq('#environment-checker-modal').modal('show');
            runEnvironmentCheck();
        };
        
        window.autoFixEnvironments = function() {
            if (confirm(i18n.get('confirm.auto.fix.env'))) {
                jq.ajax({
                    url: '/config/autoFixEnvironments.json',
                    method: 'POST',
                    success: function(response) {
                        if (response.success) {
                            notice(i18n.get('notify.auto.fix.completed') + ': ' + response.message, true);
                            runEnvironmentCheck(); // ÈáçÊñ∞Ê£ÄÊü•
                        } else {
                            notice(i18n.get('notify.auto.fix.failed') + ': ' + response.message, false);
                        }
                    },
                    error: function() {
                        notice(i18n.get('notify.auto.fix.request.failed'), false);
                    }
                });
            }
        };
        
        // ==================== ÈÖçÁΩÆÊìç‰ΩúÂ∑•ÂÖ∑ÂáΩÊï∞ ====================
        
        function setConfigButtonLoading(jqBtn, isLoading, operation) {
            if (isLoading) {
                var loadingText = '';
                switch(operation) {
                    case 'deleting':
                        loadingText = '<i class="fa fa-spinner fa-spin"></i> ' + i18n.get('operation.deleting');
                        break;
                    default:
                        loadingText = '<i class="fa fa-spinner fa-spin"></i> ' + i18n.get('operation.processing');
                }
                
                jqBtn.prop('disabled', true)
                    .data('original-html', jqBtn.html())
                    .html(loadingText)
                    .addClass('btn-loading');
            } else {
                jqBtn.prop('disabled', false)
                    .html(jqBtn.data('original-html') || jqBtn.html())
                    .removeClass('btn-loading');
            }
        }
        
        function showConfigSuccess(title, message) {
            var content = '<strong>' + title + '</strong>';
            if (message && message.trim().length > 0) {
                content += '<br><small class="text-muted">' + message + '</small>';
            }
            
            var alertHtml = '<div class="alert alert-success alert-dismissible fade show" role="alert">' +
                '<i class="fa fa-check-circle"></i> ' + content +
                '<button type="button" class="close" data-dismiss="alert" aria-label="Close">' +
                '<span aria-hidden="true">&times;</span>' +
                '</button>' +
                '</div>';
            
            if (jq('#config-alert-container').length === 0) {
                jq('body').prepend('<div id="config-alert-container" style="position: fixed; top: 70px; right: 20px; z-index: 9999; width: 350px;"></div>');
            }
            var successElement = jq(alertHtml);
            jq('#config-alert-container').append(successElement);
            
            setTimeout(function() {
                successElement.fadeOut(300, function() {
                    jq(this).remove();
                });
            }, 3000);
        }
        
        function showConfigError(title, message) {
            var content = '<strong>' + title + '</strong>';
            if (message && message.trim().length > 0) {
                content += '<br><small class="text-muted">' + message + '</small>';
            }
            
            var alertHtml = '<div class="alert alert-danger alert-dismissible fade show" role="alert">' +
                '<i class="fa fa-exclamation-triangle"></i> ' + content +
                '<button type="button" class="close" data-dismiss="alert" aria-label="Close">' +
                '<span aria-hidden="true">&times;</span>' +
                '</button>' +
                '</div>';
            
            if (jq('#config-alert-container').length === 0) {
                jq('body').prepend('<div id="config-alert-container" style="position: fixed; top: 70px; right: 20px; z-index: 9999; width: 350px;"></div>');
            }
            var errorElement = jq(alertHtml);
            jq('#config-alert-container').append(errorElement);
            
            setTimeout(function() {
                errorElement.fadeOut(300, function() {
                    jq(this).remove();
                });
            }, 5000);
        }
        
        // ==================== Êï∞ÊçÆÂ∫ìË∞ÉËØïÂô®ÂáΩÊï∞ ====================
        
        window.openDatabaseDebugger = function() {
            if (!jq('#database-debugger-modal').length) {
                createDatabaseDebuggerModal();
            }
            jq('#database-debugger-modal').modal('show');
        };
        
        function createDatabaseDebuggerModal() {
            var modalHtml = '<div class="modal fade" id="database-debugger-modal" tabindex="-1">' +
                '<div class="modal-dialog modal-xl">' +
                '<div class="modal-content">' +
                '<div class="modal-header">' +
                '<h4 class="modal-title"><i class="fa fa-database"></i> ' + i18n.get('db.debugger.title') + '</h4>' +
                '<button type="button" class="close" data-dismiss="modal">' +
                '<span aria-hidden="true">√ó</span>' +
                '</button>' +
                '</div>' +
                '<div class="modal-body">' +
                '<div class="row">' +
                '<div class="col-md-6">' +
                '<h5><i class="fa fa-cog"></i> ' + i18n.get('db.debugger.config.data') + '</h5>' +
                '<button class="btn btn-primary btn-sm" onclick="queryAllConfigs()">' + i18n.get('db.debugger.query.all.configs') + '</button>' +
                '<div id="config-data-display" class="mt-3">' +
                '<p class="text-muted">' + i18n.get('db.debugger.query.hint.config') + '</p>' +
                '</div>' +
                '</div>' +
                '<div class="col-md-6">' +
                '<h5><i class="fa fa-server"></i> ' + i18n.get('db.debugger.module.data') + '</h5>' +
                '<button class="btn btn-info btn-sm" onclick="queryAllModules()">' + i18n.get('db.debugger.query.all.modules') + '</button>' +
                '<div id="module-data-display" class="mt-3">' +
                '<p class="text-muted">' + i18n.get('db.debugger.query.hint.module') + '</p>' +
                '</div>' +
                '</div>' +
                '</div>' +
                '<div class="row mt-4">' +
                '<div class="col-12">' +
                '<h5><i class="fa fa-search"></i> ' + i18n.get('db.debugger.matching.analysis') + '</h5>' +
                '<div class="form-group">' +
                '<label>' + i18n.get('db.debugger.app.name') + ':</label>' +
                '<input type="text" id="debug-app-name" class="form-control" placeholder="' + i18n.get('db.debugger.app.name.placeholder') + '">' +
                '</div>' +
                '<div class="form-group">' +
                '<label>' + i18n.get('db.debugger.env.name') + ':</label>' +
                '<input type="text" id="debug-environment" class="form-control" placeholder="' + i18n.get('db.debugger.env.placeholder') + '">' +
                '</div>' +
                '<button class="btn btn-warning" onclick="analyzeMatching()">' + i18n.get('db.debugger.analyze.matching') + '</button>' +
                '<div id="matching-analysis-display" class="mt-3">' +
                '<p class="text-muted">' + i18n.get('db.debugger.fill.hint') + '</p>' +
                '</div>' +
                '</div>' +
                '</div>' +
                '</div>' +
                '<div class="modal-footer">' +
                '<button type="button" class="btn btn-secondary" data-dismiss="modal">' + i18n.get('env.checker.close') + '</button>' +
                '</div>' +
                '</div>' +
                '</div>' +
                '</div>';
            jq('body').append(modalHtml);
        }
        
        window.queryAllConfigs = function() {
            jq('#config-data-display').html('<i class="fa fa-spinner fa-spin"></i> ' + i18n.get('db.debugger.querying'));
            jq.ajax({
                url: '/config/debugQuery.json',
                method: 'GET',
                success: function(response) {
                    if (response.success && response.data) {
                        displayConfigData(response.data);
                    } else {
                        jq('#config-data-display').html('<p class="text-danger">' + i18n.get('db.debugger.query.failed') + ': ' + (response.message || i18n.get('db.debugger.unknown.error')) + '</p>');
                    }
                },
                error: function() {
                    jq('#config-data-display').html('<p class="text-danger">' + i18n.get('db.debugger.request.failed') + '</p>');
                }
            });
        };
        
        window.queryAllModules = function() {
            jq('#module-data-display').html('<i class="fa fa-spinner fa-spin"></i> ' + i18n.get('db.debugger.querying'));
            jq.ajax({
                url: '/module/debugQuery.json',
                method: 'GET',
                success: function(response) {
                    if (response.success && response.data) {
                        displayModuleData(response.data);
                    } else {
                        jq('#module-data-display').html('<p class="text-danger">' + i18n.get('db.debugger.query.failed') + ': ' + (response.message || i18n.get('db.debugger.unknown.error')) + '</p>');
                    }
                },
                error: function() {
                    jq('#module-data-display').html('<p class="text-danger">' + i18n.get('db.debugger.request.failed') + '</p>');
                }
            });
        };
        
        window.analyzeMatching = function() {
            var appName = jq('#debug-app-name').val().trim();
            var environment = jq('#debug-environment').val().trim();
            
            if (!appName || !environment) {
                jq('#matching-analysis-display').html('<p class="text-warning">' + i18n.get('db.debugger.fill.required') + '</p>');
                return;
            }
            
            jq('#matching-analysis-display').html('<i class="fa fa-spinner fa-spin"></i> ' + i18n.get('db.debugger.analyzing'));
            jq.ajax({
                url: '/config/debugMatching.json',
                method: 'GET',
                data: { appName: appName, environment: environment },
                success: function(response) {
                    if (response.success && response.data) {
                        displayMatchingAnalysis(response.data);
                    } else {
                        jq('#matching-analysis-display').html('<p class="text-danger">' + i18n.get('db.debugger.analysis.failed') + ': ' + (response.message || i18n.get('db.debugger.unknown.error')) + '</p>');
                    }
                },
                error: function() {
                    jq('#matching-analysis-display').html('<p class="text-danger">' + i18n.get('db.debugger.analysis.request.failed') + '</p>');
                }
            });
        };
        
        function displayConfigData(configs) {
            if (!configs || configs.length === 0) {
                jq('#config-data-display').html('<p class="text-warning">' + i18n.get('db.debugger.no.config.data') + '</p>');
                return;
            }
            
            var html = '<table class="table table-sm table-striped">' +
                '<thead><tr><th>' + i18n.get('common.app.name') + '</th><th>' + i18n.get('common.environment') + '</th><th>' + i18n.get('common.create.time') + '</th></tr></thead>' +
                '<tbody>';
            configs.forEach(function(config) {
                html += '<tr>' +
                    '<td><code>' + (config.appName || 'N/A') + '</code></td>' +
                    '<td><code>' + (config.environment || 'N/A') + '</code></td>' +
                    '<td>' + (config.gmtCreate || 'N/A') + '</td>' +
                    '</tr>';
            });
            html += '</tbody></table>';
            jq('#config-data-display').html(html);
        }
        
        function displayModuleData(modules) {
            if (!modules || modules.length === 0) {
                jq('#module-data-display').html('<p class="text-warning">' + i18n.get('db.debugger.no.module.data') + '</p>');
                return;
            }
            
            var html = '<table class="table table-sm table-striped">' +
                '<thead><tr><th>' + i18n.get('common.app.name') + '</th><th>' + i18n.get('common.environment') + '</th><th>IP</th><th>' + i18n.get('label.status') + '</th><th>' + i18n.get('common.heartbeat.time') + '</th></tr></thead>' +
                '<tbody>';
            modules.forEach(function(module) {
                html += '<tr>' +
                    '<td><code>' + (module.appName || 'N/A') + '</code></td>' +
                    '<td><code>' + (module.environment || 'N/A') + '</code></td>' +
                    '<td>' + (module.ip || 'N/A') + '</td>' +
                    '<td>' + (module.status || 'N/A') + '</td>' +
                    '<td>' + (module.gmtModified || 'N/A') + '</td>' +
                    '</tr>';
            });
            html += '</tbody></table>';
            jq('#module-data-display').html(html);
        }
        
        function displayMatchingAnalysis(analysis) {
            var html = '<div class="alert alert-info">' +
                '<h6><i class="fa fa-info-circle"></i> ' + i18n.get('db.debugger.analysis.result') + '</h6>' +
                '<p><strong>' + i18n.get('db.debugger.module.count') + ':</strong> ' + (analysis.moduleCount || 0) + '</p>' +
                '<p><strong>' + i18n.get('db.debugger.config.count') + ':</strong> ' + (analysis.configCount || 0) + '</p>';
            
            if (analysis.issues && analysis.issues.length > 0) {
                html += '<p><strong>' + i18n.get('db.debugger.issues.found') + ':</strong></p><ul>';
                analysis.issues.forEach(function(issue) {
                    html += '<li class="text-danger">' + issue + '</li>';
                });
                html += '</ul>';
            }
            
            if (analysis.suggestions && analysis.suggestions.length > 0) {
                html += '<p><strong>' + i18n.get('push.suggestion') + ':</strong></p><ul>';
                analysis.suggestions.forEach(function(suggestion) {
                    html += '<li class="text-success">' + suggestion + '</li>';
                });
                html += '</ul>';
            }
            
            html += '</div>';
            
            if (analysis.modules && analysis.modules.length > 0) {
                html += '<h6>' + i18n.get('db.debugger.matched.modules') + ':</h6>';
                html += '<table class="table table-sm"><thead><tr><th>' + i18n.get('common.app.name') + '</th><th>' + i18n.get('common.environment') + '</th><th>IP</th></tr></thead><tbody>';
                analysis.modules.forEach(function(module) {
                    html += '<tr><td>' + module.appName + '</td><td>' + module.environment + '</td><td>' + module.ip + '</td></tr>';
                });
                html += '</tbody></table>';
            }
            
            jq('#matching-analysis-display').html(html);
        }
        
        // ==================== jQuery DOM Ready ‰∫ã‰ª∂ÁªëÂÆö ====================
        
        jq(function () {
            jq(".btn-push").on('click', function () {
                var appName = jq(this).attr('data-app');
                var environment = jq(this).attr('data-env');
                
                // ÊòæÁ§∫Ë∞ÉËØïÈù¢ÊùøÂπ∂ËÆ∞ÂΩïÊé®ÈÄÅÂèÇÊï∞
                showConfigDebugPanel();
                logPushParams(appName, environment);
                
                // ÂÖàÊü•ËØ¢ÂåπÈÖçÁöÑÊ®°Âùó
                checkModuleMatches(appName, environment, function(matchResult) {
                    logModuleMatches(matchResult);
                    
                    if (matchResult.hasMatches) {
                        // ÊúâÂåπÈÖçÁöÑÊ®°ÂùóÔºåÊâßË°åÊé®ÈÄÅ
                        executePushConfig(appName, environment);
                    } else {
                        // Ê≤°ÊúâÂåπÈÖçÁöÑÊ®°ÂùóÔºåÊòæÁ§∫ËØ¶ÁªÜÂéüÂõ†
                        showNoMatchReason(matchResult.reason, matchResult.suggestions);
                    }
                });
            })
            
            jq(".btn-config-delete").on('click', function () {
                var jqBtn = jq(this);
                var appName = jqBtn.attr('data-app');
                var environment = jqBtn.attr('data-env');
                
                // Á°ÆËÆ§Âà†Èô§Êìç‰Ωú
                if (confirm(i18n.get('confirm.delete.config', appName, environment))) {
                    // ËÆæÁΩÆÊåâÈíÆÂä†ËΩΩÁä∂ÊÄÅ
                    setConfigButtonLoading(jqBtn, true, 'deleting');
                    
                    // ÊâßË°åÂà†Èô§
                    jq.ajax({
                        url: '/config/delete.json',
                        method: 'POST',
                        data: {
                            appName: appName,
                            environment: environment
                        },
                        success: function(response) {
                            setConfigButtonLoading(jqBtn, false);
                            
                            if (response.success) {
                                // ÊàêÂäüÔºöÊòæÁ§∫ÊàêÂäüÊ∂àÊÅØÂπ∂Âà∑Êñ∞È°µÈù¢
                                showConfigSuccess(i18n.get('operation.delete.success'), response.message);
                                setTimeout('window.location.reload()', 1000);
                            } else {
                                // Â§±Ë¥•ÔºöÊòæÁ§∫ÈîôËØØ‰ø°ÊÅØ
                                showConfigError(i18n.get('operation.delete.failed'), response.message);
                            }
                        },
                        error: function() {
                            setConfigButtonLoading(jqBtn, false);
                            showConfigError(i18n.get('operation.delete.failed'), 'Network error or server unavailable');
                        }
                    });
                }
            })
        });
    
    function createEnvironmentCheckerModal() {
        var modalHtml = '<div class="modal fade" id="environment-checker-modal" tabindex="-1">' +
            '<div class="modal-dialog modal-lg">' +
            '<div class="modal-content">' +
            '<div class="modal-header bg-info">' +
            '<h4 class="modal-title">' +
            '<i class="fa fa-check-circle"></i> ' + i18n.get('env.checker.title') +
            '</h4>' +
            '<button type="button" class="close" data-dismiss="modal">' +
            '<span>√ó</span>' +
            '</button>' +
            '</div>' +
            '<div class="modal-body">' +
            '<div id="environment-check-content">' +
            '<!-- Ê£ÄÊü•ÁªìÊûúÂÜÖÂÆπ -->' +
            '</div>' +
            '</div>' +
            '<div class="modal-footer">' +
            '<button type="button" class="btn btn-primary" onclick="runEnvironmentCheck()">' +
            '<i class="fa fa-refresh"></i> ' + i18n.get('env.checker.recheck') +
            '</button>' +
            '<button type="button" class="btn btn-success" onclick="autoFixEnvironments()" id="auto-fix-btn" style="display:none;">' +
            '<i class="fa fa-magic"></i> ' + i18n.get('env.checker.auto.fix') +
            '</button>' +
            '<button type="button" class="btn btn-secondary" data-dismiss="modal">' + i18n.get('env.checker.close') + '</button>' +
            '</div>' +
            '</div>' +
            '</div>' +
            '</div>';
        jq('body').append(modalHtml);
    }
    
    function runEnvironmentCheck() {
        var jqcontent = jq('#environment-check-content');
        jqcontent.html('<div class=\"text-center\"><i class=\"fa fa-spinner fa-spin\"></i> ' + i18n.get('env.checker.checking') + '</div>');
        
        jq.ajax({
            url: '/config/checkEnvironments.json',
            method: 'GET',
            success: function(response) {
                if (response.success) {
                    displayEnvironmentCheckResult(response.data);
                } else {
                    jqcontent.html('<div class=\"alert alert-danger\">' + i18n.get('env.checker.failed') + ': ' + response.message + '</div>');
                }
            },
            error: function() {
                jqcontent.html('<div class=\"alert alert-danger\">' + i18n.get('env.checker.retry') + '</div>');
            }
        });
    }
    
    function displayEnvironmentCheckResult(data) {
        var html = '';
        
        // ÊÄª‰ΩìÁä∂ÊÄÅ
        if (data.hasIssues) {
            html += '<div class="alert alert-warning">' +
                '<h5><i class="fa fa-exclamation-triangle"></i> ' + i18n.get('env.checker.issues.found') + '</h5>' +
                '<p>' + i18n.get('env.checker.issues.count', data.issueCount) + '</p>' +
                '</div>';
            jq('#auto-fix-btn').show();
        } else {
            html += '<div class="alert alert-success">' +
                '<h5><i class="fa fa-check"></i> ' + i18n.get('env.checker.normal') + '</h5>' +
                '<p>' + i18n.get('env.checker.all.matched') + '</p>' +
                '</div>';
            jq('#auto-fix-btn').hide();
        }
        
        // ËØ¶ÁªÜÁöÑÂåπÈÖçË°®
        if (data.details && data.details.length > 0) {
            html += '<h5>üìã ' + i18n.get('env.checker.details') + '</h5>';
            html += '<table class="table table-sm table-striped">' +
                '<thead>' +
                '<tr>' +
                '<th>Config (AppName)</th>' +
                '<th>Config Environment</th>' +
                '<th>' + i18n.get('env.checker.match.status') + '</th>' +
                '<th>' + i18n.get('env.checker.available.envs') + '</th>' +
                '<th>' + i18n.get('push.suggestion') + '</th>' +
                '</tr>' +
                '</thead>' +
                '<tbody>';
            
            data.details.forEach(function(item) {
                var statusClass = item.matched ? 'text-success' : 'text-danger';
                var statusIcon = item.matched ? 'fa-check' : 'fa-times';
                var statusText = item.matched ? i18n.get('env.checker.matched') : i18n.get('env.checker.not.matched');
                
                var envBadges = '';
                for (var i = 0; i < item.availableEnvironments.length; i++) {
                    envBadges += '<span class="badge badge-secondary">' + item.availableEnvironments[i] + '</span> ';
                }
                
                html += '<tr>' +
                    '<td>' + item.configAppName + '</td>' +
                    '<td><span class="badge badge-primary">' + item.configEnvironment + '</span></td>' +
                    '<td class="' + statusClass + '">' +
                    '<i class="fa ' + statusIcon + '"></i> ' + statusText +
                    '</td>' +
                    '<td>' + envBadges + '</td>' +
                    '<td>' + item.suggestion + '</td>' +
                    '</tr>';
            });
            
            html += '</tbody></table>';
        }
        
        jq('#environment-check-content').html(html);
    }
        
</script>

